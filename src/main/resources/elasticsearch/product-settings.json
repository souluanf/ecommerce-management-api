{
  "number_of_shards": 2,
  "number_of_replicas": 1,
  "analysis": {
    "analyzer": {
      "multilingual_search": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "trim"
        ]
      },
      "partial_search": {
        "tokenizer": "keyword",
        "filter": [
          "lowercase",
          "asciifolding",
          "trim",
          "partial_filter"
        ]
      },
      "ngram_search": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "trim",
          "ngram_filter"
        ]
      }
    },
    "filter": {
      "partial_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 20
      },
      "ngram_filter": {
        "type": "ngram",
        "min_gram": 3,
        "max_gram": 15
      }
    }
  }
}